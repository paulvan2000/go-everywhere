<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- If CheckBox is checked, show the check icon -->
    <item
        android:drawable="@drawable/baseline_check_box_24"
        android:state_checked="true" />

    <!-- Otherwise (unchecked), show the cross (X) icon -->
    <item
        android:drawable="@drawable/baseline_check_box_outline_blank_24" />
</selector>
