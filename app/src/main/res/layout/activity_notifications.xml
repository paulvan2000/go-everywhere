<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".NotificationsActivity"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:text="GoEverywhere"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="30sp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="273dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/baseline_account_box_24"
            android:background="@color/white"
            android:id="@+id/profile"
            android:contentDescription="profile button"
            >

        </ImageButton>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/baseline_house_24"
            android:background="@color/white"
            android:id="@+id/home"
            android:contentDescription="home button"
            >
        </ImageButton>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications &amp; Reminders"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Please choose one below:"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/lavender_border"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/reminders_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="I want to receive ride reminders before my scheduled trip."
                    android:textColor="@color/lavender"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/lavender_border"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/notifs_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="I want notifications for ongoing promotions and service updates."
                    android:textColor="@color/lavender"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:id="@+id/saving_button"
                android:textStyle="bold">

            </Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


