<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/lavender_border">

        <TextView
            android:id="@+id/rider_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rider ID: user123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>

        <TextView
            android:id="@+id/pickup_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup: North Broward, FL"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dropoff_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dropoff: Coconut Creek, FL"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/view_details_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Details"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/accept_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_green_dark"/>

            <Button
                android:id="@+id/reject_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@android:color/holo_red_light"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 